<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="4" />
    <!-- fixed seed for reproducable simulations -->
    <experiment length="0" ticks_per_second="10" random_seed="1" />
    <profiling file="simulation_results.txt"
             format="table"
             truncate_file="true" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <!-- Eye-Being controller -->
    <eyebot_being_controller id="being" library="build/controllers/eyebot_apocalypse/libeyebot_being.so">
      <actuators>
        <quadrotor_position implementation="default" />
        <range_and_bearing implementation="default" />
        <leds implementation="default" medium="leds" />
      </actuators>
      <sensors> 
        <positioning implementation="default" />
        <range_and_bearing implementation="medium" medium="rab" show_rays="true" />
        <eyebot_light implementation="rot_z_only" show_rays="false" />
      </sensors>
      <params>
        <apocalypse alpha_healthy = "1"
                  beta_healthy = "-1"
                  gamma_healthy = "1"
                  delta_healthy = "1"

                  alpha_infected = "1"
                  beta_infected = "-1"
                  gamma_infected = "1"
                  delta_infected = "-1"
                  InfectionPercentage="1"
                  InfectionStart="0"
                  InfectionTerminal="50000"
                  InfectionDistance="0"
                  CuringDistance = "300"
                  CuringTime = "50" />

        <flocking target_distance="250"
                  AttractionFactor="0.9"
                  exponent="2"
                  GoalGain="0" />
      </params>
    </eyebot_being_controller>


    <!-- Eye-Medic controller -->
    <eyebot_medic_controller id="medic" library="build/controllers/eyebot_apocalypse/libeyebot_medic.so">
      <actuators>
        <quadrotor_position implementation="default" />
        <range_and_bearing implementation="default" />
        <leds implementation="default" medium="leds" />

      </actuators>
      <sensors>
        <positioning implementation="default" />
        <range_and_bearing implementation="medium" medium="rab" show_rays="true" />
        <eyebot_light implementation="rot_z_only" show_rays="false" />
      </sensors>
      <params>
        <apocalypse alpha_medic = "-0.5"
                  beta_medic = "0.5"
                  gamma_medic = "-0.01"
                  delta_medic = "-0.01"
                  CuringDistance = "300"
                  CuringTime = "50" />

        <flocking target_distance="250"
                  AttractionFactor="0.9"
                  exponent="2"
                  GoalGain="0" /> 

      </params>
    </eyebot_medic_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="60, 60, 5" center="0, 0, 2.5">
    <light id="l" position="20,20,3" orientation="0,0,0" color="white" intensity="20" medium="light" />
    <distribute>
      <position method="uniform" min="-20,-20,0" max="-5,-5,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="10" max_trials="1000">
        <eye-bot id="eb_being" rab_range="50">
          <controller config="being" />
        </eye-bot>
      </entity>
    </distribute>

    <distribute>
      <position method="uniform" min="-25,-25,0" max="-5,-5,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="1" max_trials="1000">
        <eye-bot id="eb_medic" rab_range="50">
          <controller config="medic" />
        </eye-bot>
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" iterations="10" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
    <led id="light" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0" position="0,0.192728,22.8506,1" look_at="-0.0395853,0.192728,21.8506" lens_focal_length="20" />
      </camera>
    </qt-opengl>

      <!-- <user_functions library="build/loop_functions/id_loop_functions/libid_loop_functions"
                      label="id_qtuser_functions" /> -->
  </visualization>
</argos-configuration>